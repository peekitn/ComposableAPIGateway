datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Api {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  baseUrl     String
  openapiSpec Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relação com logs
  requestLogs RequestLog[]
}

model RequestLog {
  id        String   @id @default(uuid())
  apiId     String
  method    String
  path      String
  headers   Json
  body      Json?
  response  Json?
  status    Int
  createdAt DateTime @default(now())

  api Api @relation(fields: [apiId], references: [id])
}